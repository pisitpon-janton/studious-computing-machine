import math
print("-------------------------------------------")
print("ตัวอย่างการทำงาน")
print("เช่น")
print("x²+3x+2=0")
print("กรอก 1 ,3 ,2 ตามลำดับ")
print("-------------------------------------------")
numa = float(input("ป้อนตัวเลขสัมประสิทธ์ x กำลัง 2 = "))
numb = float(input("ป้อนตัวเลขสัมประสิทธ์ x กำลัง 1 = "))
numc = float(input("ป้อนตัวเลขสัมประสิทธ์ x กำลัง 0 = "))
print("-------------------------------------------")
x0 = numb**2-4*numa*numc
if x0 >= 0 :
  x1 = math.sqrt(x0)
  x2 = -numb+x1
  x3 = -numb-x1
  x = x2/2*numa
  y = x3/2*numa
  print("-------------------------------------------")
  print("คำตอบที่1 = ",x)
  print("คำตอบที่2 = ",y)
  print("-------------------------------------------")
  print("เมื่อแยกตัวประกอบจะเขียนในรูป ( x+",-x,")")
  print("เมื่อแยกตัวประกอบจะเขียนในรูป ( x+",-y,")")
  print("เมื่อแยกตัวประกอบจะเขียนในรูป ( x+",-x,")","( x+",-y,")")
  print("-------------------------------------------")
else :
  print("สมการนี้ไม่มีคำตอบ")
  print("-------------------------------------------")
